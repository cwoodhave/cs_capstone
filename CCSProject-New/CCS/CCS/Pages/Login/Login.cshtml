@page
@model CCS.Pages.Login.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="row">
    <div class="container">
        <form method="post" class="form-horizontal">
            @if (!ModelState.IsValid)
            {
                <div class="login-valid">
                    <h4 class="text-danger">Validation Errors</h4>
                    <div asp-validation-summary="All"></div>
                 </div>
            }

            <div class="login-centered">
                <div class="row adjustedHeight">

                    <div class="col-md-6">
                        <div class="left-size">
                            <span class="logo"></span>
                            <img src="~/images/Login/CCSLogo.png" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="right-size">
                            <div class="form-group">
                                <label asp-for="LoginViewModel.UserName" class="col-xs-6 control-label"></label>
                                <div class="col-xs-12">
                                    <input text="text" asp-for="LoginViewModel.UserName" class="form-control inputBox" placeholder="User ID" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="LoginViewModel.Password" class="col-xs-6 control-label"></label>
                                <div class="col-xs-offset-12">
                                    <input type="password" asp-for="LoginViewModel.Password" class="form-control inputBox" placeholder="Password" />
                                </div>
                            </div>

                            <hr />

                            <div class="form-group">
                                <input type="submit" class="btn btn-primary loginButton" value="Login">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>   

    </div>

</div>