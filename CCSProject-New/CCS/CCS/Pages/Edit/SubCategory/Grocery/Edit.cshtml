@page
@model CCS.Pages.Edit.SubCategory.Grocery.EditModel

@{
	Layout = "_FormLayout";
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>FoodCategory</h4>
<hr />
