@page
@model CCS.Pages.Edit.FoodCategory.EditModel

@{
    //Layout = "_FormLayout";
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="container-list">

        <div class="text-align-center">
            Edit Food Category
        </div>

        <hr />

        <form method="post" class="form-signin">
            <div class="containerSize">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FoodCategory.FoodCategoryID" />
                <div>
                    <div class="form-group">
                        <label asp-for="FoodCategory.FoodCategoryType" class="control-label"></label>
                        <select asp-for="FoodCategory.FoodCategoryType" class="form-control">
                            <option value="">Please Select A Category Type</option>
                            @foreach (var type in Model.Types)
                            {
                                <option val="@((int)type)">@type</option>
                            }
                        </select>
                        <span asp-validation-for="FoodCategory.FoodCategoryType" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        <label asp-for="FoodCategory.Description" class="control-label"></label>
                        <input asp-for="FoodCategory.Description" class="form-control" />
                        <span asp-validation-for="FoodCategory.Description" class="text-danger"></span>
                    </div>
                </div>

                <hr class="createHr" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <input type="submit" value="Save" class="btn btn-lg btn-outline-info btn-block" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <a asp-page="./Index" class="btn btn-lg btn-outline-info btn-block">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

