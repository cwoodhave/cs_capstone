@page
@model CCS.Pages.Edit.FoodCategory.DetailsModel

@{
    ViewData["Title"] = "Details";
}



<div class="row">
    <div class="container-list">

        <div class="text-align-center">
            Food Category Details
        </div>


        <p class="create-align">
            <a asp-page="./Edit" asp-route-id="@Model.FoodCategory.FoodCategoryID" class="btn btn-primary">Edit</a> |
            <a asp-page="./Index" class="btn btn-info">Back to List</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th style="border-bottom:2px solid black; border-top:0px;">
                        @Html.DisplayNameFor(model => model.FoodCategory.FoodCategoryType)
                    </th>
                    <th style="border-bottom:2px solid black; border-top:0px;">
                        @Html.DisplayNameFor(model => model.FoodCategory.Description)
                    </th>                    
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.FoodCategory.FoodCategoryType)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.FoodCategory.Description)
                    </td>                    
                </tr>

            </tbody>
        </table>
    </div>
</div>