@page
@model CCS.Pages.Edit.FoodCategory.DeleteModel

@{
    ViewData["Title"] = "Delete";
}



<div class="row">
    <div class="container-list">

        <div class="text-align-center mb-5">
            Delete Food Category
        </div>


        <table class="table">
            <thead>
                <tr>
                    <th style="border-bottom:2px solid black; border-top:0px;">
                        @Html.DisplayNameFor(model => model.FoodCategory.FoodCategoryType)
                    </th>
                    <th style="border-bottom:2px solid black; border-top:0px;">
                        @Html.DisplayNameFor(model => model.FoodCategory.Description)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.FoodCategory.FoodCategoryType)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.FoodCategory.Description)
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="text-align-center">
            <h3 id="delete-warning">Are you sure you want to delete this?</h3>
        </div>


        <div class="create-align">
            <form method="post">
                <input type="hidden" asp-for="FoodCategory.FoodCategoryID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index" class="btn btn-info">Back to List</a>
            </form>
        </div>

    </div>
</div>
