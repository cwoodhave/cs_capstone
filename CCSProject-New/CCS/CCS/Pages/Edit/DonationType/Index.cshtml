@page
@model CCS.Pages.Edit.DonationType.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<div class="row">
    <div class="container-list">

        <div class="text-align-center">
            Donation Type
        </div>

        <p class="create-align">
            <a asp-page="Create" class="btn btn-info">Create New Donation Type</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th style="border-bottom:2px solid black; border-top:0px;">
                        Donation Type
                    </th>
                    <th style="border-bottom:2px solid black; border-top:0px;">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DonationType)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.DonationTypeID" class="btn btn-primary">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.DonationTypeID" class="btn btn-secondary">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.DonationTypeID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

