@page
@model CCS.Pages.Edit.Donor.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Agency[0].AgencyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agency[0].IsDonor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agency[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agency[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Agency.Where(x => x.IsDonor).ToList()) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AgencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDonor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
	            @Html.DisplayFor(modelItem => item.Address.StreetAddress1), @Html.DisplayFor(modelItem => item.Address.CityName), @Html.DisplayFor(modelItem => item.Address.StateShortName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AgencyID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AgencyID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AgencyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
